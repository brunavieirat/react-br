 {
  "testEnvironment": "jsdom",
  "roots": ["<rootDir>"],
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "jsc": {
          "parser": {
            "syntax": "typescript",
            "tsx": true
          },
          "keepClassNames": true,
          "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true,
            "react": {
              "runtime": "automatic"
            }
          }
        },
        "module": {
          "type": "es6",
          "noInterop": false
        }
      }
    ]
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "compilerOptions": {
  "types": ["@testing-library/jest-dom"],
  "setupFilesAfterEnv": [
    "<rootDir>/src/setupTests.js"
  ]
}  
}
